<%- include('partials/header', { title: 'Quên mật khẩu' }) %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5" style="max-width: 500px;">
  <h2 class="mb-4 text-center">Quên mật khẩu</h2>
  <form action="/auth/forgot" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required placeholder="Nhập email của bạn">
    </div>

    <button type="submit" class="btn btn-primary w-100">Gửi liên kết đặt lại mật khẩu</button>
  </form>

  <div class="mt-3 text-center">
    <a href="/auth/login">Quay lại đăng nhập</a>
  </div>
</div>

<%- include('partials/footer') %>
