<%- include('../partials/header', { title: title, user: user || null }) %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/style.css">

<div class="container mt-4">
  <h2><%= title %></h2>

  <form id="productForm" action="<%= product ? '/products/' + product._id + '?_method=PUT' : '/products' %>" method="POST">

    <div class="mb-3">
      <label for="name" class="form-label">Tên sản phẩm</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="<%= product ? product.name : '' %>"
        placeholder="Nhập tên sản phẩm"
        required
      >
    </div>

    <div class="mb-3">
      <label for="price" class="form-label">Giá</label>
      <input
        type="number"
        class="form-control"
        id="price"
        name="price"
        value="<%= product ? product.price : '' %>"
        placeholder="Nhập giá sản phẩm"
        required
      >
    </div>

    <div class="mb-3">
      <label for="quantity" class="form-label">Số lượng</label>
      <input
        type="number"
        class="form-control"
        id="quantity"
        name="quantity"
        value="<%= product ? product.quantity : '' %>"
        placeholder="Nhập số lượng"
        required
      >
    </div>

    <div class="mb-3">
      <label for="supplier" class="form-label">Nhà cung cấp</label>
      <select class="form-select" id="supplier" name="supplier" required>
        <option value="">-- Chọn nhà cung cấp --</option>
        <% suppliers.forEach(s => { %>
          <option value="<%= s._id %>" <%= product && product.supplier && product.supplier._id.equals(s._id) ? 'selected' : '' %>><%= s.name %></option>
        <% }) %>
      </select>
    </div>

    <button type="submit" class="btn btn-success"><%= product ? 'Cập nhật' : 'Thêm mới' %></button>
    <a href="/products" class="btn btn-secondary">Hủy</a>
  </form>
</div>

<%- include('../partials/footer') %>
<script src="/js/productForm.js"></script>
