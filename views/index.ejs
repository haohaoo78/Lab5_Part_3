<%- include('partials/header', { title: 'Trang chủ', user: user || null }) %>

<div class="container mt-4">
  <div class="row">
    <!-- Sidebar nhà cung cấp -->
    <div class="col-md-3">
      <h5>Nhà cung cấp</h5>
      <ul class="list-group">
        <li class="list-group-item <%= !selectedSupplier ? 'active' : '' %>">
          <a href="/" class="<%= !selectedSupplier ? 'text-white' : '' %> text-decoration-none">Tất cả</a>
        </li>
        <% suppliers.forEach(s => { %>
          <li class="list-group-item <%= selectedSupplier && selectedSupplier.toString() === s._id.toString() ? 'active' : '' %>">
            <a href="/?supplier=<%= s._id %>" class="<%= selectedSupplier && selectedSupplier.toString() === s._id.toString() ? 'text-white' : '' %> text-decoration-none"><%= s.name %></a>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="col-md-9">
      <h2>Danh sách sản phẩm</h2>
      <div class="row">
        <% if(products.length === 0) { %>
          <p class="text-muted">Không tìm thấy sản phẩm nào.</p>
        <% } else { %>
          <% products.forEach(p => { %>
            <div class="col-md-4 mb-4">
              <div class="card h-100">
                <% if(p.image) { %>
                  <img src="/uploads/<%= p.image %>" class="card-img-top" alt="Hình sản phẩm">
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= p.name %></h5>
                  <p class="card-text">Giá: <%= p.price %></p>
                  <p class="card-text">Số lượng: <%= p.quantity %></p>
                  <p class="card-text">Nhà cung cấp: <%= p.supplier ? p.supplier.name : '' %></p>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
